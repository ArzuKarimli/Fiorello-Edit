@model ProductEditVM
@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="container mt-5 ml-3">
    <h3>Edit Product</h3>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="card">
            <label class="input">
                <h5>Name :</h5>
                <input asp-for="Name" class="input__field field" type="text" maxlength="50" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </label>
            <label class="input">
                <h5>Description :</h5>
                <input asp-for="Description" class="input__field field" type="text" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </label>
            <label class="input">
                <h5>Price :</h5>
                <input asp-for="Price" class="input__field field" type="text" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </label>
            <label class="input">
                <h5>Category :</h5>
                <select asp-for="CategoryId" class="mt-3 form-control" asp-items="@ViewBag.categories">
                </select>
            </label>
            <h5>Images:</h5>
            <div class="image-gallery">
                @foreach (var image in Model.Images)
                {
                    <div class="image-wrapper @(image.IsMain ? "main-image" : "")">
                        <img src="~/img/@image.Image" style="width:100px;height:100px" />
                        @if (!image.IsMain)
                        {
                            <button type="button" class="btn btn-danger delete-image" >
                                <i class="fa-regular fa-trash-can"></i>
                            </button>
                        }
                    </div>
                }
            </div>
            <label class="input">
                <h5>Upload New Images:</h5>
                <input asp-for="NewImages" class="input__field field" type="file" multiple />
                <span class="text-danger" asp-validation-for="NewImages"></span>
            </label>
            <div class="button-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-success" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>
