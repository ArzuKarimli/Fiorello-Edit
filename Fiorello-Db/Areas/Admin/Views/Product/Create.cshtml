@model ProductCreateVM

@{
    ViewData["Title"] = "Create";
}
@section fontawsome{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
<div class="container mt-5 ml-3">
    <h3>Create Product:</h3>
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="card">
            <label class="input mt-3">
                
                <input asp-for="Name" class="input__field field"placeholder="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </label>
            <label class="input mt-3">
                
                <input asp-for="Description" class="input__field field"  placeholder="Description" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </label>
            <label class="input mt-3">
                
                <input asp-for="Price" class="input__field field" type="number" step="any" placeholder="Price" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </label>
            <select asp-for="CategoryId" class="mt-3 form-control" asp-items="@ViewBag.categories">

            </select>
            <label class="input mt-3">

                <input asp-for="Images" class="form-control mt-3"   />
                <span class="text-danger" asp-validation-for="Images"></span>
            </label>
            <div class="button-group">
                <button>Submit</button>
                <a class="btn btn-success" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>
